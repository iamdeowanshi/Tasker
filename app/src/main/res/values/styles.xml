<resources>
    <style name="AppTheme" parent="Base.V22.Theme.AppCompat.Light"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDarker</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <color name="primary">#207AA0</color>
    <color name="primaryDarker">#2199c0</color>

    <style name="ToolBarStyle" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

   <style name="NewTheme" parent="Theme.AppCompat.NoActionBar">
<!-- Customize your theme here. -->
<item name="colorPrimary">#207AA0</item>
<item name="colorPrimaryDark">#2199c0</item>
<item name="colorAccent">#2199c0</item>
<item name="android:textColorPrimary">#fff</item>
<item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

</style>





</resources>
